# Environment
NODE_ENV=development

# Server Ports
BACKEND_PORT=4001
FRONTEND_PORT=3000

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=trading_db
POSTGRES_USER=trading_user
POSTGRES_PASSWORD=trading_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# Alpaca API
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
AI_MAX_NEWS_PER_HOUR=50
AI_CONTEXT_REFRESH_INTERVAL=21600000

# News Sources (at least one recommended for AI trading)
# Get free API key at https://finnhub.io/
FINNHUB_API_KEY=your_finnhub_api_key_here
# Get free API key at https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
# Get free API key at https://newsapi.org/register
NEWSAPI_KEY=your_newsapi_key_here
# Get free API key at https://polygon.io/
POLYGON_API_KEY=your_polygon_api_key_here
# News polling frequency in milliseconds (default: 30000 = 30 seconds)
NEWS_POLL_FREQUENCY=30000

# JWT Authentication
JWT_SECRET=your_jwt_secret_here_change_in_production

# URLs
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:4001
